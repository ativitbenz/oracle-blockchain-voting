# ==============================================
# Server Configuration
# ==============================================
PORT=5000
NODE_ENV=production

# ==============================================
# Oracle Database Configuration
# ==============================================
DB_USER=your_oracle_username
DB_PASSWORD=your_oracle_password
DB_CONNECTION_STRING=your_connection_string_high

# ==============================================
# Oracle Cloud Wallet Configuration
# สำหรับ Autonomous Database
# ==============================================
USE_WALLET=true
WALLET_LOCATION=/app/wallet
WALLET_PASSWORD=your_wallet_password

# ==============================================
# Oracle Instant Client Path
# สำหรับ Railway ใช้ path นี้
# ==============================================
ORACLE_INSTANT_CLIENT_PATH=/opt/oracle/instantclient_21_1

# ==============================================
# Connection Pool Configuration
# ==============================================
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_INCREMENT=5
DB_QUEUE_TIMEOUT=60000
DB_QUEUE_MAX=1000

# ==============================================
# CORS Configuration
# ใส่ URL ของ Frontend ที่ deploy แล้ว
# ==============================================
CORS_ORIGIN=https://your-frontend.pages.dev
CORS_ALLOWED_ORIGINS=https://your-frontend.pages.dev,https://www.your-domain.com

# ==============================================
# Table Names
# ==============================================
BLOCKCHAIN_TABLE=votes_blockchain_v3
IMMUTABLE_TABLE=polls_immutable_v2
OPTIONS_TABLE=poll_options_v2
RECIPIENTS_TABLE=poll_recipients_v2

# ==============================================
# Frontend URL (for email links)
# ==============================================
FRONTEND_URL=https://your-frontend.pages.dev

# ==============================================
# Email Configuration (SendGrid)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Free tier: 100 emails/day
# ==============================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=your-verified-email@example.com

# Optional: Disable email for testing (will show PIN in logs instead)
# DISABLE_EMAIL=true

# ==============================================
# Performance Configuration
# ==============================================
SLOW_QUERY_THRESHOLD=5000
